# Supabase Configuration
SUPABASE_URL=https://mafttcvhinlestxrtjfa.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5175

# Storage Configuration
MAX_FILE_SIZE=10737418240
# 10GB in bytes for pro users

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
# gmail or smtp
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833

# Custom SMTP Settings (if not using Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# true for 465, false for other ports

# Dodo Payments Configuration
DODO_PAYMENTS_API_KEY=your_dodo_payments_api_key_here
DODO_PAYMENTS_WEBHOOK_SECRET=your_dodo_payments_webhook_secret_here
# Get these from Dodo Payments Dashboard > Developers > Webhooks

# Admin Configuration
ADMIN_EMAILS=admin@example.com,dropvanish@gmail.com
# Comma-separated list of admin emails

# Cron Jobs
ENABLE_CRON_JOBS=true
# Set to false to disable scheduled cleanup jobs

# Logging
LOG_LEVEL=info
# Options: error, warn, info, http, debug
